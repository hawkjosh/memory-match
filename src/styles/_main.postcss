.page-wrapper {
	display: flex;
	flex-direction: column;
	margin: 0 auto;
	padding: 1rem;

	& .page-header {
		display: flex;
		flex-direction: column;
		place-items: center;

		& .header-title {
			font-size: clamp(2rem, 1.343rem + 2.697vw, 3.5rem);
			line-height: 1.25;
			font-weight: 700;
			margin-bottom: 1rem;
		}

		& .operations-container {
			display: flex;
			gap: 2rem;

			& .start-btn {
				display: inline-block;
				padding: 0.75rem 1.25rem;
				font-size: 1rem;
				font-weight: bold;
				text-align: center;
				text-decoration: none;
				border-radius: 0.5rem;
				background-color: #007bff;
				color: #fff;
				border: none;
				cursor: pointer;
				transition: background-color 0.375s ease;

				&:hover {
					background-color: #0056b3;
				}

				&:active {
					background-color: #003d80;
				}
			}

			& .new-game-btn {
				display: inline-block;
				padding: 0.75rem 1.25rem;
				font-size: 1rem;
				font-weight: bold;
				text-align: center;
				text-decoration: none;
				border-radius: 0.5rem;
				background-color: #007bff;
				color: #fff;
				border: none;
				cursor: pointer;
				transition: background-color 0.375s ease;

				&:hover {
					background-color: #0056b3;
				}

				&:active {
					background-color: #003d80;
				}
			}

			& .turns-tracker {
				display: inline-block;
				padding: 0.75rem;
				border-radius: 1.25rem;
				background-color: #ff9800;
				color: #fff;
				font-size: 1rem;
				font-weight: bold;
				text-align: center;
				text-transform: uppercase;
			}
		}
	}

	& .page-content {
		margin-top: 1rem;

		& .cards-container {
			margin: 1rem ;
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(6rem, 1fr));
			gap: 1rem;
		}
	}
}

@keyframes logo-spin {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}
